                  <h1>The Caveman Lifestyle</h1>
                  <%= Tilt::ERBTemplate.new("partials/author.html.erb").render(self, person: "tim_ruckriegel") %>
               </section>
               <%= Tilt::ERBTemplate.new('partials/article_content.html.erb').render(self, article_name: "caveman_lifestyle", lineno_for_img: 2, direction: "right") %>
               <%= Tilt::ERBTemplate.new('partials/image_gallery.html.erb').render(self, name_for_gallery: "caveman_lifestyle") %>
            </article>
            <article id="potluck">
               <section class="article-header">
                  <h1>St. Patty's Day Potluck</h1>
                  <%= Tilt::ERBTemplate.new("partials/author.html.erb").render(self, person: "john_martin") %>
               </section>
               <%= Tilt::ERBTemplate.new('partials/article_content.html.erb').render(self, article_name: "potluck") %>
               <%= Tilt::ERBTemplate.new('partials/image_gallery.html.erb').render(self, name_for_gallery: "potluck") %>
            </article>
            <article id="code-challenge">
               <section class="article-header">
                  <h1>Rural Testing Code Challenge Tournament</h1>
                  <%= Tilt::ERBTemplate.new("partials/author.html.erb").render(self, person: "lew_gordon", pic_extension: :png) %>
               </section>
               <%= Tilt::ERBTemplate.new('partials/article_content.html.erb').render(self, article_name: "code_challenge", lineno_for_img: 2, direction: "right") %>
               <%= Tilt::ERBTemplate.new('partials/image_gallery.html.erb').render(self, name_for_gallery: "code_challenge") %>
